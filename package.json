{
  "name": "@mmroshani/sam",
  "version": "0.0.0",
  "description": "automatically detect entity changes and make sequelize migrations",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "prepare": "npm run build",
    "postversion": "git push && git push --tags",
    "version": "npm run format && git add -A src",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mmRoshani/sam.git"
  },
  "keywords": [
    "sequelize",
    "auto",
    "migrations",
    "SQL",
    "typeScript"
  ],
  "author": "MohammadMojtaba Roshani",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mmRoshani/sam/issues"
  },
  "homepage": "https://github.com/mmRoshani/sam#readme",
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  }
}
